    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "eslint": "^8.42.0",
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/living-economy-arena/environmental-systems"
  },
  "bugs": {
    "url": "https://github.com/living-economy-arena/environmental-systems/issues"
